<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NewNotesActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_height="wrap_content" android:text="Notes Title" android:textColor="@android:color/black" android:layout_marginTop="10dp" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Notes Title"
            android:id="@+id/edtNotesTitle"
            android:background="@drawable/edittext_style"/>


    <TextView android:layout_width="wrap_content"
              android:layout_marginLeft="10dp"
              android:layout_height="wrap_content" android:text="Notes Subject" android:textColor="@android:color/black" android:layout_marginTop="10dp" />

    <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:gravity="top|left"
            android:lines="40"
            android:textColor="@android:color/black"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="Notes Subject"
            android:id="@+id/edtNotes"
            android:background="@drawable/edittext_style"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:id="@+id/btnSubmit"
            android:textColor="@android:color/white"
            android:background="@drawable/button_login"/>
</LinearLayout>